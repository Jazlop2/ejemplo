lista = []

while True:
    print("Menu")
    print("1. Agregar elemento")
    print("2. Borrar elemento")
    print("3. Mostrar lista")
    print("4. Salir")
    opcion = input("Dame una opcion: ")
    if opcion == "1":
        elemento = input("Dame  elemento que deseas agregar: ")
        lista.append(elemento)
    elif opcion == "2":
        elemento = input("Dame elemento que deseas borrar: ")
        if elemento in lista:
            lista.remove(elemento)
    elif opcion == "3":
        print("Elementos lista")
        for elemento in lista:
            print(elemento)
    elif opcion == "4":
        print("Saliendo")
        break
    else:
        print("regresa pronto, vuleve cuando este mejor tdo ")
